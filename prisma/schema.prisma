generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  authorId  Int?
  content   String?
  id        Int     @id @default(autoincrement())
  published Boolean @default(false)
  title     String
  author      User?   @relation(fields: [authorId], references: [id])
}

model User {
  email    String  @unique
  id       Int     @id @default(autoincrement())
  name     String?
  password String
  posts     Post[]
}
